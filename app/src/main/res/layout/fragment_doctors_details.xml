<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#E0F7FA">

    <TextView
        android:text="SU CITA ESTÃ CONFIRMADA"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#00796B"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imageDoctorLarge"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/doctor_login"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/textDoctorName"
        android:text="Dr. ------"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textDoctorPhone"
        android:text="987-654-321"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textAppointmentDate"
        android:text="Fecha: Sabado, 24 de Mayo 2025"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textAppointmentTime"
        android:text="Hora: 04:00 PM"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnConfirmar"
        android:text="CONFIRMAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00796B"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnRegresar"
        android:text="REGRESAR A LA LISTA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#004D40"
        android:textColor="#FFFFFF"/>

</LinearLayout>
